{{log this}}
    <div class="row mt-4">
    <div class="col-md-6">
    <h2>{{title}}</h2>
    <p>{{content}}</p>
            <p>Created by {{user.username}} on {{format_date createdAt}}</p>
        </div>
</div>

{{#if comments.length}}
      {{#each comments}}
      <div class="card" style="width: 18rem;">
        <img src="..." class="card-img-top" alt="...">
        <div class="card-body">
          <p class="card-text">{{content}}</p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">You posted this on: {{format_date createdAt}}</li>
        </ul>
      </div>
      {{/each}}
      {{else}}
      <p>You have no comments. Add one now.</p>
      {{/if}}

      <div class="row mt-4" id="new-comments-form" style="display:none">
        <div class="col-md-6">
          <h3>Add a new comment</h3>

          <form class="form" id="submit-comments">
            <div class="form-group">
              <label for="content">Comment text:</label>
              <textarea class="form-input" id="content" name="content"></textarea>
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
        </div>
      </div>

      <button class="btn btn-primary" id="create-button">Add a new comment</button>

