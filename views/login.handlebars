<script src="/css/style.css"> </script>
<div class="card login-form">
  <h3 class="card-header">Login Form</h3>
  <form id="login-form" class="card-body">

    <div class="container">
      <label class="form-label" for="username-login">Username</label>
      <input
        id="username-login"
        type="text"
        placeholder="Enter Username"
        autofocus="true"
        class="form-input"
      />

      <label class="form-label" for="password-login">Password</label>
      <input
        id="password-login"
        type="password"
        placeholder="Enter Password"
        autofocus="true"
        class="form-input"
      />
    </div>

    <button type="submit" class="button btn-primary">Login</button>

    <div class="signup">
      <a href="/signup">Sign up</a>
    </div>
  </form>
</div>
<script src="/js/login.js"></script>